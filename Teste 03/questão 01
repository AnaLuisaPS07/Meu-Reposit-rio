package main

import "fmt"

func reverse(str string) (result string) {
 for _, v := range str {
     result = string(v) + result 
 }    
 return   
    
}

func main () {
    
 var (
  frase string 
     )
 
 fmt.Println ("Digite a frase invertida: ")
 fmt.Scan (&frase)
 
 fraseInv := reverse(frase)
 
     fmt.Println ("A frase invertida Ã© ", fraseInv)
 
}
    
